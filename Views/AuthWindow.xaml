<Window x:Class="recipe.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:recipe.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:AuthViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
    <Grid>
        <Button Command ="{Binding CheckUserCommand}" Content="Button" HorizontalAlignment="Left" Margin="180,190,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}" Margin="140,126,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="120" Margin="140,94,0,0"/>
        <TextBlock HorizontalAlignment="Left" Text="{Binding Message, UpdateSourceTrigger=PropertyChanged}"   Margin="200,159,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
    </Grid>
</Window>
